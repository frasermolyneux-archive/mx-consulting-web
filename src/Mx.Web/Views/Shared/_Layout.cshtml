<!DOCTYPE html>
<html lang="en">
<head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-158936380-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-158936380-1');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MX Consulting</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/theme.min.css" />

    <!-- Libs CSS -->
    <link rel="stylesheet" href="~/fonts/Feather/feather.css">
    <link rel="stylesheet" href="~/libs/flickity/dist/flickity.min.css">
    <link rel="stylesheet" href="~/libs/flickity-fade/flickity-fade.css">
    <link rel="stylesheet" href="~/libs/aos/dist/aos.css">
    <link rel="stylesheet" href="~/libs/jarallax/dist/jarallax.css">
    <link rel="stylesheet" href="~/libs/highlightjs/styles/vs2015.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MX Consulting</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse">

                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuAbout" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                About
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuAbout">
                                <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About MX Consulting</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Profile">Profile</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Qualifications">Qualifications</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Molyneux Consulting Ltd - Registered Company Number: 12263202
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Libs JS -->
    <script src="~/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/libs/flickity/dist/flickity.pkgd.min.js"></script>
    <script src="~/libs/flickity-fade/flickity-fade.js"></script>
    <script src="~/libs/aos/dist/aos.js"></script>
    <script src="~/libs/smooth-scroll/dist/smooth-scroll.min.js"></script>
    <script src="~/libs/jarallax/dist/jarallax.min.js"></script>
    <script src="~/libs/jarallax/dist/jarallax-video.min.js"></script>
    <script src="~/libs/jarallax/dist/jarallax-element.min.js"></script>
    <script src="~/libs/typed.js/lib/typed.min.js"></script>
    <script src="~/libs/countup.js/dist/countUp.min.js"></script>
    <script src="~/libs/highlightjs/highlight.pack.min.js"></script>
    <script src="~/libs/isotope-layout/dist/isotope.pkgd.min.js"></script>
    <script src="~/libs/imagesloaded/imagesloaded.pkgd.min.js"></script>

    <script src="~/js/theme.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
